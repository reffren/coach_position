@model CoachPosition.Web.Models.InformationBoardModel
@{
    ViewBag.Title = "Position";
}
<div class="@(Model.Way != 0 ? "way" : "info")">
    <h3 class="info_name">Информация для поезда @Model.NumTrain</h3>
    @if (Model.Way == 1 || Model.Way == 3 || Model.Way == 5)
    {
        <ul class="@(Model.Cars.FirstOrDefault() == 99 ? "cars_position" : "cars_position_right")">
            @if (Model.Cars.FirstOrDefault() == 99)
            {
                <li><img src="@Url.Content("~/Content/BoardImages/99.jpg")" /></li>
            }

            @foreach (var car in Model.Cars)
            {
                if (car != 99 && car != 0)
                {
                    <li><img src="@Url.Content("~/Content/BoardImages/1.jpg")" /></li>
                }
                else if (car != 99)
                {
                    <li><img src="@Url.Content("~/Content/BoardImages/0.jpg")" /></li>
                }
            }
            @if (Model.Cars.LastOrDefault() == 99)
            {
                <li><img src="@Url.Content("~/Content/BoardImages/99.jpg")" /></li>
            }
        </ul>
    }
    @if (Model.Way != 0)
    {
        <table class="@(Model.Cars.FirstOrDefault() == 99 ? "letter_position" : "letter_position_right")">
            <tr>
                @switch (Model.Way)
                {
                    case 1:
                        <td>1 путь<br />2 путь</td>
                        break;
                    case 2:
                    <td>1 путь<br />2 путь</td>
                        break;
                    case 3:
                    <td>3 путь<br />4 путь</td>
                        break;
                    case 4:
                    <td>3 путь<br />4 путь</td>
                        break;
                    case 5:
                    <td>5 путь<br />6 путь</td>
                        break;
                    case 6:
                    <td>5 путь<br />6 путь</td>
                        break;
                }

                @foreach (var letter in Model.Letters)
                {
                    <td>@letter</td>
                }
                @switch (Model.Way)
                {
                    case 1:
                        <td>1 путь<br />2 путь</td>
                        break;
                    case 2:
                    <td>1 путь<br />2 путь</td>
                        break;
                    case 3:
                    <td>3 путь<br />4 путь</td>
                        break;
                    case 4:
                    <td>3 путь<br />4 путь</td>
                        break;
                    case 5:
                    <td>5 путь<br />6 путь</td>
                        break;
                    case 6:
                    <td>5 путь<br />6 путь</td>
                        break;
                }
            </tr>
        </table>
    }
    else
    {
        <h3 class="info_name red_color">Информация о номере пути и платфмы для поезда @Model.NumTrain отсутствует.</h3>
    }
    @if (Model.Way == 2 || Model.Way == 4 || Model.Way == 6)
    {
        <ul class="@(Model.Cars.FirstOrDefault() == 99 ? "cars_position" : "cars_position_right")">
            @if (Model.Cars.FirstOrDefault() == 99)
            {
                <li><img src="@Url.Content("~/Content/BoardImages/99.jpg")" /></li>
            }

            @foreach (var car in Model.Cars)
            {
                if (car != 99 && car != 0)
                {
                    <li><img src="@Url.Content("~/Content/BoardImages/1.jpg")" /></li>
                }
                else if (car != 99)
                {
                    <li><img src="@Url.Content("~/Content/BoardImages/0.jpg")" /></li>
                }
            }
            @if (Model.Cars.LastOrDefault() == 99)
            {
                <li><img src="@Url.Content("~/Content/BoardImages/99.jpg")" /></li>
            }
        </ul>
    }
</div>