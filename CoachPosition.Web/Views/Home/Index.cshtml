@model CoachPosition.Web.Models.IndexModel
@{
    ViewBag.Title = "Информация о поезде";
}
<h3 class="info_name">Информация о поезде *</h3>
@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <h3 class="message">@ViewBag.Message</h3>
    <div class="div_fields">
        <div class="editor_label">
            @Html.LabelFor(m => m.NumTrain)
        </div>
        <div>
            @Html.TextBoxFor(m => m.NumTrain, new { @class = "index_field" })
            @Html.ValidationMessageFor(m => m.NumTrain, null, new { @class = "red_color" })
        </div>
        <div class="editor_label">
            @Html.LabelFor(m => m.NumCar)
        </div>
        <div>
            @Html.TextBoxFor(m => m.NumCar, new { @class = "index_field" })
            @Html.ValidationMessageFor(m => m.NumCar, null, new { @class = "red_color" })
        </div>
    </div>
    <div class="btn_center">
        <input type="submit" class="btn_main" value="Показать" />
    </div>
}

<h4 id="warn_info">* Обращаем ваше внимание, что для получения корректной информации, необходимо производить проверку минимум за 20 мин. до прибытия поезда.</h4>