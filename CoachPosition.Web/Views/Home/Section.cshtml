@model CoachPosition.Web.Models.SectionModel
@{
    ViewBag.Title = "Секция";
}
<div class="info">
    <h3 class="info_name">Информация</h3>
    <table>
        <tr class="pad_tr">
            <td><h2 class="grey_color">Номер поезда: </h2></td>
            <td><h1 class="red_color"> @Model.NumTrain</h1></td>
        </tr>
        <tr class="pad_tr">
            <td><h2 class="grey_color">Номер вагона: </h2></td>
            <td><h1 class="red_color"> @Model.NumCar</h1></td>
        </tr>
        <tr class="pad_tr">
            <td><h2 class="grey_color">Секция на <br /> платформе: </h2></td>
            <td><h1 class="red_color"> @Model.SectionValue</h1></td>
            </tr>
        </table>
</div>