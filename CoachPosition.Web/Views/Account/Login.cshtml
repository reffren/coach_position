@model CoachPosition.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Выполнить вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вход</h2>
<p>
    Пожалуйста, введите логин и пароль или @Html.ActionLink("зарегистрируйтесь", "Register") если вы впервые на нашем сайте.
</p>

@Html.ValidationSummary(true, "К сожалению произошла ошибка при вводе данных")

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="logOnField">
        <fieldset>
            <legend>Информация</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <p>
                <input type="submit" value="Войти" />
            </p>
        </fieldset>
    </div>
}

