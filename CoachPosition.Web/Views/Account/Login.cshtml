@model CoachPosition.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Выполнить вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Вход</h2>

@Html.ValidationSummary(true, "К сожалению произошла ошибка при вводе данных")
<h3 class="message">@ViewBag.Message</h3>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="logOnField">
        <fieldset>
            <div class="editor_label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @class = "manager_field" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "red_color" })
            </div>

            <div class="editor_label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor_field">
                @Html.PasswordFor(m => m.Password, new { @class = "manager_field" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "red_color" })
            </div>
            <p class="btn_center">
                <input type="submit" class="btn_main" value="Войти" />
            </p>
        </fieldset>
    </div>
}

